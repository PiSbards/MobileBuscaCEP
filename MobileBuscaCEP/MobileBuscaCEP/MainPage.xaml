<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileBuscaCEP.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">
        <Image Source="logoCorreios1" BackgroundColor="Transparent"/>
        <Entry TextColor="Black"  Placeholder="Digite o CEP, somente números:" PlaceholderColor="Black" BackgroundColor="white" x:Name="CEP" Keyboard="Numeric"/>
        <Button Text="BUSCAR CEP" TextColor="white" BackgroundColor="#00416B" x:Name="btCEP"/>
        <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" x:Name="lblResultado"/>
    </StackLayout>

</ContentPage>